@model IEnumerable<ToDoSite.Domain.Entities.Task>

@{
    ViewBag.Title = "Index";
}

<div class="todosBlockHeader">
    <input type="checkbox" class="comboBox">
    <form action="#" class="createNewTask"></form>
</div>
<div class="todosBlockBody">
    <ul>
        @try {
            foreach (var item in Model)
            {
                <li class="itemTask">
                    <div class="completeCheckBlock">
                        <input type="checkbox" class="completeCheck" value=@item.>
                        <label for="checkbox"></label>
                    </div>
                    <p class="taskName">@item.Name</p>
                    <a href="" class="delete"></a>
                </li>
                <a href="#" class="delete"></a>
            }
        }
        catch (NullReferenceException) { }
    </ul>
</div>

